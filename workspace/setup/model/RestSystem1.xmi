<?xml version="1.0" encoding="UTF-8"?>
<restModel:RestSystem
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:restModel="/metamodel/restModel.ecore"
    xsi:schemaLocation="/metamodel/restModel.ecore restModel.ecore">
  <request xsi:type="restModel:RePost"
      succAnswer="//@answer.0">
    <route>
      <segment
          value="testRoute"/>
    </route>
    <data xsi:type="restModel:Parameter"
        name="author"/>
    <data xsi:type="restModel:Parameter"
        name="title"/>
    <operations
        xsi:type="restModel:OpCreate"
        struct="//@struct.0"/>
  </request>
  <request xsi:type="restModel:ReGet"
      succAnswer="//@answer.1">
    <route>
      <segment
          value="books"/>
    </route>
    <operations
        xsi:type="restModel:OpRead"
        failedAnswer="//@answer.2"
        struct="//@struct.0"
        id="id"/>
  </request>
  <request xsi:type="restModel:ReGet"
      succAnswer="//@answer.1">
    <route>
      <segment
          value="books"/>
      <segment
          value=":id"/>
    </route>
    <operations
        xsi:type="restModel:OpRead"
        failedAnswer="//@answer.2"
        struct="//@struct.0"
        id="id"/>
  </request>
  <request xsi:type="restModel:RePut"
      succAnswer="//@answer.0">
    <route>
      <segment
          value="books"/>
      <segment
          value=":id"/>
    </route>
    <data xsi:type="restModel:Parameter"
        name="author"/>
    <data xsi:type="restModel:Parameter"
        name="title"/>
    <operations
        xsi:type="restModel:OpUpdate"
        failedAnswer="//@answer.2"
        struct="//@struct.0"/>
  </request>
  <request xsi:type="restModel:ReDelete"
      succAnswer="//@answer.1">
    <route>
      <segment
          value="books"/>
      <segment
          value=":id"/>
    </route>
    <operations
        xsi:type="restModel:OpDelete"
        failedAnswer="//@answer.2"
        struct="//@struct.0"/>
  </request>
  <struct name="Book">
    <fields
        name="author"/>
    <fields
        name="title"/>
  </struct>
  <answer status="201"
      return="&quot;id&quot;"/>
  <answer status="200"
      return="&quot;id&quot;"/>
  <answer status="404"
      return="&quot;error&quot;"/>
</restModel:RestSystem>
